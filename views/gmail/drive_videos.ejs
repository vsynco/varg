<%- include('../header.ejs') %>

<section class="section">
  <div class="section-header">
    <div>
        <h2 class="section-title">Videos de Drive</h2>
        <div class="breadcrumb"><a href="/">Inicio</a> > <a href="/gmail">Gmail</a> > Videos de Drive</div>
    </div>
    <div class="button-group">
        <a href="/gmail" class="button">Volver a la lista</a>
    </div>
  </div>

 
  <div class="breadcrumb">
    <a href="/gmail/<%= contacto.id %>">Fotos</a> - 
    <a href="/gmail/videos/<%= contacto.id %>">Videos</a> - 
    <a href="/gmail/drive_fotos/<%= contacto.id %>">Drive Fotos</a> - 
    <a href="/gmail/drive_videos/<%= contacto.id %>">Drive Videos</a>
  </div></section>

<style>
  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 16px;
    padding: 16px;
  }
  .video-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 16px;
    background-color: #f0f0f0;
    border-radius: 8px;
    text-align: center;
  }
  .video-thumbnail {
    width: 100%;
    height: 150px;
    object-fit: cover;
    margin-bottom: 8px;
    border-radius: 4px;
  }
  .video-name {
    font-weight: bold;
    margin-bottom: 8px;
    word-break: break-word;
  }
  .video-type {
    font-size: 12px;
    color: #666;
    margin-bottom: 8px;
  }
  .video-link {
    text-decoration: none;
    color: #007bff;
    font-size: 14px;
  }
</style>

<% if (nextPageToken) { %>
  <div>
    <a href="/gmail/<%= contacto.id %>/drive/videos?pageToken=<%= nextPageToken %>">Siguiente página</a>
  </div>
<% } %>

<div class="video-grid">
  <% if (videos && videos.length > 0) {
    videos.forEach((video) => { %>
      <div class="video-item">
        <% if (video.thumbnailLink) { %>
          <img src="<%= video.thumbnailLink %>" alt="<%= video.name %>" class="video-thumbnail">
        <% } else { %>
          <div class="video-thumbnail" style="background-color: #ddd; display: flex; justify-content: center; align-items: center;">
            No preview
          </div>
        <% } %>
        <div class="video-name"><%= video.name %></div>
        <div class="video-type"><%= video.mimeType %></div>
        <a href="<%= video.webViewLink %>" target="_blank" class="video-link">Ver en Drive</a>
      </div>
    <% });
  } else { %>
    <p>No hay videos disponibles.</p>
  <% } %>
</div>

<% if (nextPageToken) { %>
  <div>
    <a href="/gmail/<%= contacto.id %>/drive/videos?pageToken=<%= nextPageToken %>">Siguiente página</a>
  </div>
<% } %>
<%- include('../footer.ejs') %>
