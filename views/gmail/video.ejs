<%- include('../header.ejs') %>

<div class="full-width-container">

<style>
  /* Romper el contenedor del header para ocupar todo el ancho */
  .container {
    max-width: none !important;
    margin: 0 !important;
    padding: 0 !important;
  }
  
  /* Contenedor principal que ocupa todo el ancho */
  .full-width-container {
    width: 99vw;
    margin-left: calc(-50vw + 50%);
    padding: 10px 20px 20px 20px;
    box-sizing: border-box;
  }
  
  /* Navegaci√≥n simplificada */
  .simple-nav-line {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 0 10px 0;
    margin: 0 0 20px 0;
    font-family: 'Fira Code', monospace;
    font-size: 12px;
    color: #f8f8f2;
    border-bottom: 1px solid #6272a4;
  }
  
  .nav-left {
    display: flex;
    align-items: center;
    gap: 20px;
  }
  
  .nav-left a {
    color: #8be9fd;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .nav-left a:hover {
    color: #f1fa8c;
  }
  
  .nav-buttons {
    display: flex;
    gap: 15px;
  }
  
  .nav-buttons a {
    color: #bd93f9;
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .nav-buttons a:hover {
    color: #ff79c6;
  }
  
  .nav-buttons a.active {
    color: #50fa7b;
  }
  
  .contact-summary {
    color: #6272a4;
    font-size: 11px;
  }
  
  .contact-name {
    color: #f1fa8c;
    font-weight: 400;
  }
  
  /* Grid de fotos */
  .photos-grid {
    display: grid;
    grid-template-columns: repeat(15, 1fr);
    gap: 10px;
    padding: 0;
    width: 100%;
  }
  
  /* Responsive para pantallas m√°s peque√±as */
  @media (max-width: 1200px) {
    .photos-grid {
      grid-template-columns: repeat(6, 1fr);
    }
  }
  
  @media (max-width: 900px) {
    .photos-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  @media (max-width: 600px) {
    .photos-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 8px;
    }
  }
  
  @media (max-width: 400px) {
    .photos-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 6px;
    }
  }
  
  .photo-item {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 6px;
    border: 1px solid #6272a4;
    transition: all 0.3s ease;
  }
  
  .photo-item:hover {
    border-color: #ff79c6;
    transform: scale(1.02);
  }
  
  .video-item {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 6px;
    border: 2px solid #f1fa8c;
    transition: all 0.3s ease;
  }
  
  .video-item:hover {
    border-color: #ff79c6;
    transform: scale(1.02);
  }
  
  .photo-item img, .video-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .photo-item:hover img, .video-item:hover img {
    transform: scale(1.05);
  }
  
  .photo-date {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    color: #f8f8f2;
    padding: 8px 4px 4px;
    font-size: 10px;
    text-align: center;
    font-family: 'Fira Code', monospace;
  }
  
  .video-indicator {
    position: absolute;
    top: 5px;
    right: 5px;
    background-color: rgba(241, 250, 140, 0.9);
    color: #282a36;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 10px;
    font-weight: bold;
  }
  
  .no-media-message {
    text-align: center;
    color: #6272a4;
    font-style: italic;
    padding: 40px 20px;
    background-color: #44475a;
    border-radius: 6px;
    border: 1px solid #6272a4;
  }
</style>

<div class="simple-nav-line">
  <div class="nav-left">
    <a href="/gmail">‚Üê Volver a la lista</a>
    <div class="nav-buttons">
      <a href="/gmail/<%= contacto.id %>">üì∑ Fotos</a>
      <a href="/gmail/videos/<%= contacto.id %>" class="active">üé• Videos</a>
    </div>
  </div>
  
  <div class="contact-summary">
    <span class="contact-name"><%= contacto.nombre %></span> ‚Ä¢ 
    <%= contacto.email %> ‚Ä¢ 
    ID: <%= contacto.id %>
    <% if (nextPageToken) { %>
      ‚Ä¢ <a href="/gmail/videos/<%= contacto.id %>?pageToken=<%= nextPageToken %>" style="color: #8be9fd; text-decoration: none;">P√°gina siguiente ‚Üí</a>
    <% } %>
  </div>
</div>

<div class="photos-grid">
  <% if (mediaItems && mediaItems.length > 0) {
    mediaItems.sort((a, b) => {
      const dateA = new Date(a.mediaMetadata.creationTime);
      const dateB = new Date(b.mediaMetadata.creationTime);
      return dateB - dateA;
    });

    mediaItems.forEach((mediaItem) => { %>
      <% if (mediaItem.mimeType && mediaItem.mimeType.startsWith('image/')) { %>
        <div class="photo-item">
          <a href="<%= mediaItem.maxQualityUrl %>" target="_blank" download>
            <img src="<%= mediaItem.baseUrl %>" alt="Foto" loading="lazy">
          </a>
          <div class="photo-date">
            <%= new Intl.DateTimeFormat('es-ES', { day: '2-digit', month: '2-digit', year: 'numeric' }).format(new Date(mediaItem.mediaMetadata.creationTime)) %>
          </div>
        </div>
      <% } %>

      <% if (mediaItem.mimeType && mediaItem.mimeType.startsWith('video/')) { %>
        <div class="video-item">
          <a href="<%= mediaItem.downloadUrl %>" target="_blank" download>
            <img src="<%= mediaItem.baseUrl %>" alt="Video" loading="lazy">
          </a>
          <div class="video-indicator">‚ñ∂</div>
          <div class="photo-date">
            <%= new Intl.DateTimeFormat('es-ES', { day: '2-digit', month: '2-digit', year: 'numeric' }).format(new Date(mediaItem.mediaMetadata.creationTime)) %>
          </div>
        </div>
      <% } %>
    <% });
  } else { %>
    <div class="no-media-message" style="grid-column: 1 / -1;">
      <p>No hay fotos o videos disponibles en esta cuenta.</p>
    </div>
  <% } %>
</div>

</div>

