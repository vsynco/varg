    /* HERO INICIO */
    .hero-split {
      padding: 70px 0 80px;
      background: linear-gradient(rgba(40, 56, 69, 0.92), rgba(40, 56, 69, 0.92)), url('/static/puig/15.jpg') center/cover;
      color: #ffffff;
    }

    .hero-split-container {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .hero-split-content {
      flex: 1;
      text-align: left;
      padding-right: 30px;
      max-width: 650px;
    }

    .hero-split-logo {
      margin-bottom: 25px;
    }

    .hero-split-logo img {
      height: 60px;
      width: auto;
      display: block;
      max-width: 100%;
      object-fit: contain;
    }

    .hero-split-badge {
      display: inline-block;
      background-color: rgba(43, 75, 111, 0.2);
      color: var(--secondary);
      padding: 6px 16px;
      border-radius: 30px;
      font-size: 13px;
      font-weight: 600;
      margin-bottom: 20px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .hero-split-heading {
      font-size: 38px;
      line-height: 1.3;
      margin-bottom: 22px;
      font-weight: 700;
    }

    .hero-split-heading span {
      color: var(--accent);
    }

    .hero-split-description {
      font-size: 17px;
      margin-bottom: 30px;
      opacity: 0.9;
      line-height: 1.7;
    }

    .hero-split-button {
      background-color: var(--primary);
      color: var(--light);
      padding: 14px 28px;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 600;
      font-size: 16px;
      display: inline-block;
      transition: all 0.3s;
      border: 2px solid var(--primary);
      cursor: pointer;
    }

    .hero-split-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.06);
      background-color: #20395A;
      border-color: #20395A;
    }

    .hero-split-form-container {
      width: 320px;
      background-color: #ffffff;
      border-radius: 10px;
      padding: 25px;
      box-shadow: 0 15px 30px rgba(0,0,0,0.1);
      color: #333333;
    }

    .hero-split-form-title {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 15px;
      color: var(--dark);
      text-align: center;
    }

    .hero-split-input {
      width: 100%;
      padding: 12px 15px;
      border: 1px solid #ddd;
      border-radius: 6px;
      font-size: 15px;
      transition: all 0.3s ease;
      margin-bottom: 15px;
    }

    .hero-split-input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 2px rgba(43, 75, 111, 0.2);
    }

    .hero-split-submit {
      width: 100%;
      background-color: var(--primary);
      color: var(--light);
      padding: 12px;
      border-radius: 6px;
      font-weight: 600;
      font-size: 16px;
      border: none;
      cursor: pointer;
      transition: all 0.3s;
    }

    .hero-split-submit:hover {
      background-color: #20395A;
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.06);
    }

    .hero-split-note {
      font-size: 12px;
      color: #666666;
      text-align: center;
      margin-top: 10px;
    }

    .hero-split-whatsapp {
      margin-top: 15px;
      display: none;
    }

    @media (max-width: 992px) {
      .hero-split-container {
        flex-direction: column;
      }

      .hero-split-content {
        text-align: center;
        padding-right: 0;
        margin-bottom: 30px;
      }

      .hero-split-logo {
        display: flex;
        justify-content: center;
      }

      .hero-split-logo img {
        margin: 0 auto;
      }

      .hero-split-heading {
        font-size: 32px;
      }

      .hero-split-form-container {
        width: 100%;
        max-width: 380px;
        margin: 0 auto;
      }
    }

    /* SERVICIOS INICIO */
    .services-section {
      padding: 80px 0;
      background-color: var(--gray);
    }

    .services-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .services-title {
      text-align: center;
      font-size: 32px;
      margin-bottom: 18px;
      color: var(--dark);
      font-weight: 700;
    }

    .services-subtitle {
      text-align: center;
      margin-bottom: 50px;
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
      color: var(--text-secondary);
      font-size: 16px;
    }

    .services-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }

    .service-card {
      background-color: var(--light);
      border-radius: 8px;
      overflow: hidden;
      box-shadow: var(--shadow);
      transition: all 0.3s;
    }

    .service-card:hover {
      transform: translateY(-5px);
      box-shadow: var(--shadow-large);
    }

    .service-card-image {
      height: 200px;
      background: var(--dark);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--primary);
      font-size: 3rem;
      overflow: hidden;
    }

    .service-card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }

    .service-card-content {
      padding: 25px;
    }

    .service-card-title {
      font-size: 20px;
      font-weight: 700;
      margin-bottom: 15px;
      color: var(--dark);
    }

    .service-card-text {
      color: var(--text);
      margin-bottom: 20px;
    }

    .service-card-link {
      display: inline-flex;
      align-items: center;
      color: var(--primary);
      font-weight: 600;
      text-decoration: none;
      transition: all 0.3s;
    }

    .service-card-link:hover {
      color: #20395A;
    }

    .service-card-link::after {
      content: "→";
      margin-left: 5px;
      transition: all 0.3s;
    }

    .service-card-link:hover::after {
      margin-left: 10px;
    }

    @media (max-width: 992px) {
      .services-grid {
        grid-template-columns: repeat(2, 1fr);
      }

      .services-title {
        font-size: 28px;
      }
    }

    @media (max-width: 768px) {
      .services-grid {
        grid-template-columns: 1fr;
      }
    }

