        }
        nav {
            background-color: #44475a;
            padding: 10px 0;
            border-bottom: 1px solid #6272a4;
        }
        .nav-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 800px;
            margin: 0 auto;
            padding: 0 20px;
