        .profile {
            display: flex;
            align-items: center;
            margin: 40px 0;
        }
        .profile-image {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 20px;
            border: 2px solid #ff79c6;
        }
        .projects-section {
            margin-bottom: 40px;
