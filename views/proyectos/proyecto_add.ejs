<%- include('../header.ejs') %>

<section id="portada" class="profile">
    <img src="/static/imagenes/nuevo-proyecto.png" alt="Nuevo Proyecto" class="profile-image">
    <div class="profile-text">
        <h1><%= proyecto ? 'Editar Proyecto' : 'Nuevo Proyecto' %></h1>
        <p>Ingrese los datos del proyecto</p>
    </div>
</section>

<ol style="list-style-type: none; padding: 0;">
    <li style="display: inline;">
        <a href="/" style="color: #8be9fd; text-decoration: none;">Portada</a>
        <span style="color: #6272a4; margin: 0 5px;"> > </span>
    </li>
    <li style="display: inline;">
        <a href="/proyectos" style="color: #8be9fd; text-decoration: none;">Proyectos</a>
        <span style="color: #6272a4; margin: 0 5px;"> > </span>
    </li>
    <li style="display: inline; color: #f8f8f2;" aria-current="page"><%= proyecto ? 'Editar' : 'Nuevo' %></li>
</ol>

<section id="formulario-proyecto">
    <form action="<%= proyecto ? '/proyectos/' + proyecto.id : '/proyectos' %>" method="POST">
        <% if (proyecto) { %>
            <input type="hidden" name="_method" value="PUT">
        <% } %>
        
        <h3>Datos Básicos (Obligatorios)</h3>
        <label for="nombre">Nombre:</label>
        <input class="mb3" type="text" id="nombre" name="nombre" value="<%= proyecto ? proyecto.nombre : '' %>" required>
        
        <label for="descripcion">Descripción:</label>
        <textarea class="mb3" id="descripcion" name="descripcion" required><%= proyecto ? proyecto.descripcion : '' %></textarea>
        
        <h3>Datos Adicionales (Opcionales)</h3>
        <label for="sitioWeb">Sitio Web:</label>
        <input class="mb3" type="url" id="sitioWeb" name="sitioWeb" value="<%= proyecto ? proyecto.sitioWeb : '' %>">
        
        <label for="grupoWhatsapp">Grupo de WhatsApp:</label>
        <input class="mb3" type="url" id="grupoWhatsapp" name="grupoWhatsapp" value="<%= proyecto ? proyecto.grupoWhatsapp : '' %>">
        
        <label for="sociedad">Sociedad:</label>
        <input class="mb3" type="text" id="sociedad" name="sociedad" value="<%= proyecto ? proyecto.sociedad : '' %>">
        
        <label for="nombreFantasia">Nombre de Fantasía:</label>
        <input class="mb3" type="text" id="nombreFantasia" name="nombreFantasia" value="<%= proyecto ? proyecto.nombreFantasia : '' %>">
        
        <label for="rut">RUT:</label>
        <input class="mb3" type="text" id="rut" name="rut" value="<%= proyecto ? proyecto.rut : '' %>">
        
        <label for="domicilio">Domicilio:</label>
        <input class="mb3" type="text" id="domicilio" name="domicilio" value="<%= proyecto ? proyecto.domicilio : '' %>">
        
        <label for="ceo">CEO:</label>
        <input class="mb3" type="text" id="ceo" name="ceo" value="<%= proyecto ? proyecto.ceo : '' %>">
        
        <h3>Información Bancaria (Opcional)</h3>
        <label for="bancoNombre">Nombre del Banco:</label>
        <input class="mb3" type="text" id="bancoNombre" name="bancoNombre" value="<%= proyecto && proyecto.banco_nombre ? proyecto.banco_nombre : '' %>">
        
        <label for="bancoTipoCuenta">Tipo de Cuenta:</label>
        <input class="mb3" type="text" id="bancoTipoCuenta" name="bancoTipoCuenta" value="<%= proyecto && proyecto.banco_tipo_cuenta ? proyecto.banco_tipo_cuenta : '' %>">
        
        <label for="bancoNumeroCuenta">Número de Cuenta:</label>
        <input class="mb3" type="text" id="bancoNumeroCuenta" name="bancoNumeroCuenta" value="<%= proyecto && proyecto.banco_numero_cuenta ? proyecto.banco_numero_cuenta : '' %>">
        
        <button type="submit"><%= proyecto ? 'Actualizar' : 'Crear' %> Proyecto</button>
    </form>
</section>

<%- include('../footer.ejs') %>