        .skill-name {
            display: inline-block;
            width: 100px;
            color: #f1fa8c;
        }
        .skill-bar {
            background-color: #6272a4;
            height: 10px;
            width: 100px;
            display: inline-block;
            vertical-align: middle;
        }
        .skill-level {
            background-color: #ff79c6;
            height: 100%;
        }
        .project-link {
            display: inline-block;
            margin-top: 15px;
            color: #8be9fd;
            text-decoration: none;
