<style>
    /* Estilos normales heredados del template */
    .input-group {
        margin-bottom: 15px;
    }
    .input-group label {
        display: block;
        margin-bottom: 0.5rem;
        color: #bd93f9;
    }
    .input-group input, .input-group select {
        padding: 0.5rem;
        margin: 0px;
        border: 1px solid #6272a4;
        border-radius: 3px;
        background-color: #282a36;
        color: #f8f8f2;
        width: 200px;
    }
    .fixed-values, .percentages, .results {
        background-color: #44475a;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 4px;
        border: 1px solid #6272a4;
    }
    .button {
        color: #8be9fd;
        text-decoration: none;
        padding: 0.5rem;
        background-color: transparent;
        border: 1px solid #8be9fd;
        cursor: pointer;
        font-family: 'Fira Code', monospace;
        margin-top: 1rem;
    }
    .button:hover {
        color: #f1fa8c;
        border-color: #f1fa8c;
    }
    #liquidacionContainer {
        display: none;
        margin-top: 30px;
        padding: 20px;
        background: #44475a;
        border-radius: 8px;
        border: 1px solid #6272a4;
    }

    /* Estilos de la grilla y formato */
    .grid-container {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 5px;
        margin-bottom: 15px;
    }
    .grid-item-label {
        color: #bd93f9;
        min-width: 160px;
        padding: 2px 0;
    }
    .grid-container > div {
        padding: 2px 0;
    }
    .two-columns {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
        margin: 15px 0;
    }
    .two-columns h3 {
        margin-bottom: 10px;
        margin-top: 15px;
    }
    .firma {
        text-align: center;
        margin-top: 40px;
    }
    .firma-linea {
        border-top: 1px solid #6272a4;
        width: 200px;
        margin: 15px auto 10px;
    }
    #liquidacionContainer {
        padding: 15px;
    }
    #liquidacionContainer h2 {
        font-size: 16px;
        margin-bottom: 20px;
    }
    #liquidacionContainer h3 {
        color: #50fa7b;
        font-size: 14px;
    }

    /* Estilos específicos para impresión */
    @media print {
        #liquidacionContainer,
        #liquidacionContainer *,
        #liquidacionContainer h2,
        #liquidacionContainer h3,
        #liquidacionContainer .grid-container,
        #liquidacionContainer .grid-item-label,
        #liquidacionContainer .two-columns,
        #liquidacionContainer .firma,
        #liquidacionContainer div,
        #liquidacionContainer span {
            color: black !important;
            background-color: white !important;
            border-color: black !important;
            font-family: Arial, sans-serif !important;
            text-shadow: none !important;
            -webkit-text-fill-color: black !important;
        }
        
        #liquidacionContainer {
            display: block !important;
            position: absolute !important;
            left: 0 !important;
            top: 0 !important;
            width: 100% !important;
            margin: 0 !important;
            padding: 20px !important;
            border: none !important;
            background: white !important;
            color: black !important;
            print-color-adjust: exact !important;
            -webkit-print-color-adjust: exact !important;
        }

        .no-print,
        .container > *:not(#liquidacionContainer),
        nav,
        .button {
            display: none !important;
        }

        .firma-linea {
            border-top: 1px solid black !important;
        }

        /* Forzar color negro para elementos específicos */
        #liquidacionContainer .grid-container > div,
        #liquidacionContainer .two-columns > div,
        #liquidacionContainer h2,
        #liquidacionContainer h3,
        #liquidacionContainer .firma > div {
            color: black !important;
            text-shadow: none !important;
            -webkit-text-fill-color: black !important;
        }
    }
</style>



